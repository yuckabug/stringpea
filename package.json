{
  "name": "@yuckabug/stringpea",
  "version": "0.1.0",
  "description": "A minimal library for detecting confusable strings.",
  "author": "Elijah Passmore <elijah.passmore@yuckabug.org>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yuckabug/stringpea.git"
  },
  "homepage": "https://yuckabug.org",
  "keywords": [
    "string",
    "confusable",
    "levenshtein",
    "distance",
    "homoglyph",
    "similarity",
    "unicode"
  ],
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "NOTICE.md"
  ],
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "size-limit": [
    {
      "path": "./dist/index.js",
      "limit": "30 KB"
    }
  ],
  "scripts": {
    "types:check": "tsc --noEmit",
    "format:check": "biome format",
    "format:fix": "biome format --write",
    "lint:check": "biome lint",
    "lint:fix": "biome lint --write",
    "check": "run-p *:check",
    "fix": "run-s *:fix",
    "update:confusables": "bun run scripts/update-confusables.ts",
    "build": "bunup && size-limit",
    "prepublishOnly": "bun run check && bun test && bun run build"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/bun": "latest",
    "bunup": "0.14.20",
    "lefthook": "1.13.6",
    "npm-run-all2": "8.0.4",
    "size-limit": "^11.2.0"
  },
  "packageManager": "bun@1.3.0"
}
